<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded"
        android:contentDescription="@string/content_description_habit_image"
        android:padding="8dp"
        android:src="@drawable/ic_clock"
        app:layout_constraintTop_toTopOf="@id/tv_reminder_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_reminder_time"
         />

    <TextView
        android:id="@+id/tv_reminder_day"
        style="@style/TextNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_regular"
        android:maxLines="1"
        android:paddingBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_icon"
        tools:text="Monday" />

    <TextView
        android:id="@+id/tv_reminder_time"
        style="@style/TextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_regular"
        android:maxLines="1"
        android:paddingTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_reminder_day"
        app:layout_constraintStart_toStartOf="@id/tv_reminder_day"
        tools:text="10:00" />

</androidx.constraintlayout.widget.ConstraintLayout>